# Database Configuration
DATABASE_URL=sqlite:///./analytics.db
# For production: DATABASE_URL=postgresql://user:password@localhost:5432/retail_analytics

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Retail Analytics API

# Security - CRITICAL: Generate a secure key for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# CORS Origins - Comma separated list for production
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Google Sheets Integration (Optional)
GOOGLE_CREDENTIALS_FILE=path/to/credentials.json

# Environment
ENVIRONMENT=development
# Set to 'production' in production

# Development Settings
DEBUG=true